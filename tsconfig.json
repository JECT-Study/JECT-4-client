{
    "compilerOptions": {
        // Enable automatic JSX transform (React 17 +)
        "jsx": "react-jsx",
        "types": ["vite/client"],

        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@components/*": ["src/components/*"],
            "@pages/*": ["src/pages/*"],
            "@assets/*": ["src/assets/*"],
            "@utils/*": ["src/utils/*"],
            "@constants/*": ["src/constants/*"],
            "@hooks/*": ["src/hooks/*"],
            "@services/*": ["src/services/*"],
            "@store/*": ["src/store/*"],
            "@types/*": ["src/types/*"],
            "@lib/*": ["src/lib/*"]
        }
    },
    "files": [],
    "references": [
        { "path": "./tsconfig.app.json" },
        { "path": "./tsconfig.node.json" }
    ]
}
